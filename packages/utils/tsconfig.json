{
  // 继承自 @mylib/typescript-config/base.json 的配置
  "extends": "@mylib/typescript-config/base.json",
  // 包含的文件路径
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    // 基础 URL，用于解析非相对模块名称
    "baseUrl": ".",
    // 路径映射，用于简化模块导入
    "paths": {
      "@/*": ["src/*"]
    },
    // 生成声明文件
    "declaration": true,
    // 声明文件输出目录
    "declarationDir": "./dist",
    // 输出目录
    "outDir": "./dist",
    // 移除 .d.ts.map 文件映射
    "declarationMap": false
  }
}
