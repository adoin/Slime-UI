{
  "extends": "@mylib/typescript-config/vite.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "es",
    // 移除 .d.ts.map 文件映射
    "declarationMap": false,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    // 基础路径
    "baseUrl": ".",
    // 路径映射
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
