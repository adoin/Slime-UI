{
  "extends": "@mylib/typescript-config/base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "es",
    // 移除 .d.ts.map 文件映射
    "declarationMap": false,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
