  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@vue3-lib/typescript-config": "workspace:*",
    "rollup": "^4.27.3",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  }
}
