{
  "extends": "@mylib/typescript-config/base.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    // 移除 .d.ts.map 文件映射
    "declarationMap": false
  }
}
