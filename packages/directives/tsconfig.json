{
  // 继承自 @mylib/typescript-config/base.json 的配置
  "extends": "@mylib/typescript-config/base.json",
  // 包含的文件路径
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    // 生成声明文件
    "declaration": true,
    // 声明文件输出目录
    "declarationDir": "./dist",
    // 输出目录
    "outDir": "./dist",
    // 移除 .d.ts.map 文件映射
    "declarationMap": false
  }
}
