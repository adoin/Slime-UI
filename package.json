{
  "name": "vue3-component-lib",
  "description": "This is a modern component library template based on Turborepo+Vue 3+TypeScript.",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "author": "huangmingfu <212149997@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/huangmingfu/vue3-turbo-component-lib-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/huangmingfu/vue3-turbo-component-lib-template"
  },
  "bugs": "https://github.com/huangmingfu/vue3-turbo-component-lib-template/issues",
  "keywords": [
    "component-template",
    "component-lib",
    "turborepo",
    "monorepo",
    "vue3",
    "vite5",
    "turbo"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:docs": "pnpm -F @vue3-lib/docs run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "clean": "turbo run clean",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@vue3-lib/commitlint-config": "workspace:*",
    "@vue3-lib/eslint-config": "workspace:*",
    "@vue3-lib/prettier-config": "workspace:*",
    "@vue3-lib/typescript-config": "workspace:*",
    "@vue3-lib/stylelint-config": "workspace:*",
    "@vue3-lib/utils": "workspace:*",
    "@vue3-lib/ui": "workspace:*",
    "@commitlint/cli": "^18.6.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.4.2",
    "stylelint": "^15.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-config-recommended-vue": "^1.5.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
